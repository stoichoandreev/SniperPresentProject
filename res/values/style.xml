<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="PresentTheme" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">@color/drawer_items_text_color</item>
        <item name="colorPrimary">@color/background_floating_material_light</item>
        <item name="colorPrimaryDark">@color/background_material_light</item>

        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textViewStyle">@style/PresentTextViewStyle</item>
        <item name="android:editTextBackground">@android:color/transparent</item>
    </style>
    <style name="PresentTheme.NoActionBar" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:textSize">22sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ActionBarPadding">
        <item name="android:paddingTop">5dp</item>
        <!--<item name="android:paddingTop">?android:actionBarSize</item>-->
        <!--<item name="android:paddingTop">@dimen/abs__action_bar_default_height</item>-->
    </style>

    <style name="MyMenuTextAppearance" parent="PresentTheme">
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Style to use for ALL text views (including FontTextView) -->
    <style name="PresentTextViewStyle" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textAppearance">@style/PresentTextAppearance</item>
    </style>

    <!-- Text appearance to use for ALL text views (including FontTextView) -->
    <style name="PresentTextAppearance" parent="@android:style/TextAppearance.Holo">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PresentTheme.ActionBarStyle" parent="android:Widget.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/action_bar_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ActionBarMargin">
        <item name="android:paddingTop">?android:actionBarSize</item>
    </style>
    <style name="ListFont" parent="@android:style/Widget.ListView">
        <item name="android:paddingTop">5dp</item>
        <item name="android:divider">@android:color/transparent</item>
    </style>

</resources>