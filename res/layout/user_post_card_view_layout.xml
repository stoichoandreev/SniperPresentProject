<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:cul="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"
    android:background="@color/grey"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.sniper.presentproject.custom.CircleUserLevel
            android:id="@+id/post_user_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/prof_image"
            cul:cul_show_level_label="true"
            cul:cul_animate_at_begin="true"
            cul:cul_user_level="7"/>
        <ImageView
            android:id="@+id/three_dot_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon_three_dots"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:id="@+id/post_user_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_toRightOf="@+id/post_user_image"
            android:layout_toLeftOf="@+id/three_dot_menu"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/post_user_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/user_name_post_color"
                android:gravity="center_vertical"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/post_user_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/user_name_post_color"
                android:textSize="14sp"
                android:textStyle="italic"
                android:layout_weight="1"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_user_name_container"
            android:textColor="@color/user_name_post_color"
            android:lines="3"
            android:ellipsize="end"
            android:padding="20dp"/>
        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_text"
            android:src="@drawable/sport_event"
            android:scaleType="centerCrop"/>
        <include
            android:id="@+id/post_social_bar"
            layout="@layout/post_social_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_image"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>